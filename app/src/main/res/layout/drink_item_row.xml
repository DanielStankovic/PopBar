<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_compat_inset_shadow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/drinkImage"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/drinkNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/drinkImage"
                android:layout_toLeftOf="@id/deleteButton"
                android:layout_toRightOf="@+id/drinkImage"
                android:layout_toStartOf="@id/deleteButton"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="dadawdawfaffwafwadwa"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/barcodeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/drinkNameTextView"
                android:layout_alignStart="@+id/drinkNameTextView"
               android:layout_below="@id/drinkNameTextView"
                android:layout_toLeftOf="@id/deleteButton"
                android:layout_toStartOf="@id/deleteButton"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateAddedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/barcodeTextView"
                android:layout_alignLeft="@id/drinkNameTextView"
                android:layout_alignStart="@id/drinkNameTextView"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="italic"/>


            <Button
                android:id="@+id/deleteButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:drawable/ic_delete" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>